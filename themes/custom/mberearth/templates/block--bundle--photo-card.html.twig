{% extends "block.html.twig" %}
{#
/**
 * @file
 * Theme override for a Marketing Highlight.
 *
 * Available variables:
 * - Look in the block.html.twig file for available variables.
 */
#}
{% set label = FALSE %}
{% set class_box = FALSE %}
{#{% set featured = content.field_sf_mh_badge_label|render ? 'marketing-highlight--featured' %}#}

{% block content %}
  <a href="{{ content.field_link.0['#url'] }}" class="photo-card {{ featured }}">
    <div class="photo-card__image">
      {{ content.field_image }}
    </div>
    <div class="photo-card__body">
      {#{% if content.field_sf_mh_badge_label|render %}#}
        {#<h3 class="photo-card__type category-brand__text--knock-out"><span>{{ content.field_sf_mh_badge_label.0['#context'].value }}</span></h3>#}
      {#{% endif %}#}
      <h3 class="photo-card__title category-brand__text">{{ content.field_visible_title.0 }}</h3>
      {% if content.field_description|render %}
        <p>{{ content.field_description.0 }}</p>
      {% endif %}
      {% if content.field_link.0['#title']|render %}
        <span class="photo-card__cta category-brand__arrow">{{ content.field_link.0['#title'] }}</span>
      {% endif %}
    </div>
  </a>
  {{ content|without( 'field_visible_title', 'field_image', 'field_link', 'field_description', 'field_badge_label', 'field_call_to_action_phrase') }}
{% endblock %}
